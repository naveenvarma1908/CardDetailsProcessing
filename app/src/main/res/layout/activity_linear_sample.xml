<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/saad"
    tools:context="com.naveen.sampledemo.LinearSample">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily Report"
            android:textSize="35sp"
            android:textColor="@color/colorAccent"
            android:paddingLeft="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Online news"
            android:textColor="@color/textViewBackgroundColor"
            android:textSize="18sp"
            android:textAlignment="center"
            android:paddingRight="40sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Register with"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:background="@color/layoutBack"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:src="@mipmap/ic_fb"/>
            <ImageView
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_tw"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_g"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_or"
            android:layout_marginTop="15sp"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="25sp"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="10sp"
            android:background="@color/layoutBack">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:fontFamily="sans-serif"
                android:drawableLeft="@mipmap/ic_mail"
                android:inputType="textEmailAddress"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableLeft="@mipmap/ic_lock"
                android:fontFamily="sans-serif"/>
            <EditText
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_lock"
                android:hint="Confirm Password"
                android:fontFamily="sans-serif"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="#fff"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="10sp"
            android:background="@color/bn"/>

    </LinearLayout>
</ScrollView>

