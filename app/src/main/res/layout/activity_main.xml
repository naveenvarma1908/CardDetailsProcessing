<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naveen.sampledemo.MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAYMENT GATEWAY"
        android:textAlignment="center"
        android:id="@+id/textView_Payment"
        android:textStyle="bold"
        android:textSize="22sp"

        android:textColor="@color/textViewBackgroundColor"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_Payment"
        android:layout_marginStart="73dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@android:drawable/ic_menu_myplaces" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Special"
        android:layout_toRightOf="@id/imageView"
        android:text="DIAMOND Pack"
        android:textColor="@color/textViewBackgroundColor"
        android:textStyle="bold"
        android:layout_marginLeft="10sp"
        android:layout_alignTop="@id/imageView"/>

    <TextView
        android:id="@+id/textView_Options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_Special"
        android:layout_toRightOf="@id/imageView"
        android:textColor="@color/textViewColor"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_alignBottom="@id/imageView"
        android:text="Look for Options !!" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Card Holder Name"
        android:layout_below="@id/imageView"
        android:layout_marginTop="22sp"
        android:id="@+id/edit_cardholderName"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"/>

    <EditText
        android:layout_marginTop="22sp"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:layout_width="match_parent"
        android:id="@+id/edit_cardNumber"
        android:layout_height="wrap_content"
        android:hint="Enter 16 digit Card Number"
        android:layout_below="@id/edit_cardholderName"
        android:drawableRight="@drawable/ic_action_name"
        />

    <EditText
        android:layout_marginTop="22sp"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:id="@+id/edit_cvv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter CVV / CVC"
        android:layout_below="@id/edit_cardNumber"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_expDate"
        android:layout_below="@id/edit_cvv"
        android:hint="Enter Expiry Date"
        android:layout_marginTop="22sp"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_Process"
            android:layout_below="@id/edit_expDate"
            android:layout_margin="10dp"
            android:text="PROCESS"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@color/colorAccent"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_Process"
        android:textSize="10sp"
        android:textAlignment="center"
        android:text="I agree to TERMS and CONDITIONS"/>
</RelativeLayout>
</ScrollView>
